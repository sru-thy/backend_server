{
  "name": "backend-server",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build": "rm -rf dist && npx tsc",
    "test": "jest",
    "start-server": "npm run build && node dist/app.js",
    "develop": "nodemon ./src/app.ts",
    "migration:generate": "npm run build && npx typeorm migration:generate -d dist/db/postgres.db.js",
    "migration:run": "npm run build && npx typeorm migration:run -d dist/db/postgres.db.js",
    "migration:revert": "npm run build && npx typeorm migration:revert -d dist/db/postgres.db.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/jest-when": "^3.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "jest-when": "^3.5.2",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!**/index.ts"
    ]
  }
}
